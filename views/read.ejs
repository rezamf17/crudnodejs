<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>List Data</h1>
            <% if (msg.length != 0) { %>
              <div class="alert alert-success" role="alert"><%- msg %></div>
          <% } %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% User.forEach((element, i )=> { i++ %>
                    <tr>
                      <td><%= i++ %> </td>
                      <td><%= element.username %> </td>
                      <td><%= element.email %> </td>
                      <td><%= element.password %> </td>
                      <th>
                        <a href="/updating/<%= element.id %> " class="btn btn-success">Update</a>
                        <form action="/delete/<%= element.id %>" class="d-inline" method="POST"  onsubmit="return confirm('Yakin hapus data?')">
                          <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                       
                      </th>
                    </tr>
                   
                  <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>